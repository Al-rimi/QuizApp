<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/padding_large"
    android:background="?android:colorBackground"
    tools:context=".activities.QuizResultActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quiz_finished_title"
        android:layout_marginBottom="@dimen/margin_extra_large"
        android:textAppearance="?attr/textAppearanceHeadlineLarge"
        android:textColor="?attr/colorOnBackground"/>

    <TextView
        android:id="@+id/tvResultCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Category: General Knowledge"
        android:layout_marginBottom="@dimen/margin_medium"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorOnBackground"/>

    <TextView
        android:id="@+id/tvResultScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Your Score: 3/4"
        android:layout_marginBottom="@dimen/margin_extra_large"
        android:textColor="?attr/colorPrimary"
        android:textAppearance="?attr/textAppearanceTitleLarge"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/finish_button"
        style="@style/Widget.Material3.Button.ElevatedButton"/>

</LinearLayout>